<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:gravity="center"
    android:orientation="vertical">

    <net.treelzebub.dragview.DragView
        android:id="@+id/dragview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:inner_text="@string/app_name"
        app:inner_text_size="12sp"
        app:inner_text_paddingTop="6dp"
        app:inner_text_paddingBottom="6dp"
        app:button_disabled="@drawable/ic_lock_outline_black_24dp"
        app:button_enabled="@drawable/ic_lock_open_black_24dp"
        app:button_padding="12dp" />

</LinearLayout>